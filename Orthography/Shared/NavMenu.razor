<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">
        <div class="col-sm" style="margin-top: -5px">
            Orthography<br />
            <div style="font-size:12px; margin-left:10px; margin-top:-5px">by Vitalii Hanych © 2020</div>
        </div>
    </a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3 mb-2">
            <label for="language" style="color:white">@UILabels.Labels["ui_language"]: </label>
            <select id="language" class="form-control col-12" @bind="@selectedLanguage">
                @foreach (var language in Languages)
                {
                    <option value="@language.ID">
                        @language.Label
                    </option>
                }
            </select>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-book" aria-hidden="true"></span> @UILabels.Labels["ui_0_conjugation"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="prepositions">
                <span class="oi oi-bolt" aria-hidden="true"></span> @UILabels.Labels["ui_0_prepositions"]
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private List<Language> Languages;
    private bool collapseNavMenu = true;
    private int m_selectedLanguage;
    private int selectedLanguage
    {
        get => m_selectedLanguage;
        set
        {
            m_selectedLanguage = value;
            UILabels.SelectLanguage(m_selectedLanguage);
        }
    }

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        using (var db = new Db())
        {
            Languages = db.Languages.ToList();
            // alternative method
            //var id_language_term = db.Terms.FirstOrDefault(p => p.Value == "ui_language")?.ID ?? -1;
            foreach (var language in Languages)
            {
                language.Label = db.Labels.FirstOrDefault(p => p.ID == language.LanguageNameID)?.Value ?? UILabels.UnknownLabel;
                // alternative method
                //language.Label = id_language_term == -1
                //    ? UILabels.UnknownLabel
                //    : db.Labels.FirstOrDefault(p => p.LanguageID == language.ID && p.TermID == id_language_term)?.Value ?? UILabels.UnknownLabel;
            }
        }
        Languages = Languages.OrderBy(p => p.Label).ToList();
        selectedLanguage = UILabels.CurrentLanguage.ID;
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
